# Example .env for SPOT-CM-arbitrage
# Copy this to .env in the project root and fill in your testnet keys.
# 现货
SPOT_KEY=your_spot_key
SPOT_SECRET=your_spot_secret
# 币本位永续
DAPI_KEY=your_dapi_key
DAPI_SECRET=your_dapi_secret

UM_KEY=your_spot_key
UM_SECRET=your_spot_secret

SPOT_BASE = "https://api.binance.com"
DAPI_BASE = "https://dapi.binance.com"
FAPI_BASE = "https://fapi.binance.com"

WS_SPOT = "wss://stream.binance.com:9443"
WS_CM   = "wss://dstream.binance.com"
WS_UM   = "wss://fstream.binance.com"

# —— 标的与腿类型 ——（并列）
PAIR = "BTC"

# 腿类型：'spot' | 'coinm' | 'usdtm' | 'usdcm'
HEDGE_KIND = "spot"
QUOTE_KIND = "coinm"

# —— 策略参数 ——
ONLY_POSITIVE_CARRY      = False
ENTER_BPS                = 2.0    # 触发开仓阈值（bps）
EXIT_BPS                 = 0.5    # 盈利退出 bps
STOP_BPS                 = 10.0   # 止损 bps
MAX_HOLD_SEC             = 1800  # 强制离场秒数（默认30min）

V_USD                    = 1000       # 单次名义本金（USD）

MAX_SLIPPAGE_BPS_SPOT    = 5.0
MAX_SLIPPAGE_BPS_COINM   = 5.0

# 执行模式：仅支持 taker / hybrid
EXECUTION_MODE = "hybrid"

# Hybrid 相关参数
HYBRID_MAKER_LEG      = "quote"  # "quote" 或 "hedge"
HYBRID_WAIT_SEC       = 1.5      # 等待 maker 成交通知窗口
HYBRID_MIN_FILL_RATIO = 0.2      # 部分成交比例阈值
PAIR_POLL_INTERVAL    = 0.15  # 轮询间隔
DRY_RUN               = False